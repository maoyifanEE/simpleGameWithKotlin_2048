<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/startFragment_tv_title"
        android:text="2048"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/startFragment_btn_classic"
        app:layout_constraintStart_toStartOf="@id/startFragment_tv_title"
        app:layout_constraintEnd_toEndOf="@id/startFragment_tv_title"
        app:layout_constraintTop_toBottomOf="@id/startFragment_tv_title"
        android:text="经典模式"
        android:textColor="@color/white"
        android:background="#FAEBD7FF"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/startFragment_btn_timeLimit"
        app:layout_constraintTop_toBottomOf="@id/startFragment_btn_classic"
        app:layout_constraintEnd_toEndOf="@id/startFragment_btn_classic"
        android:text="限时模式"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="#90EE90FF"
        android:layout_width="120dp"
        android:layout_height="60dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>